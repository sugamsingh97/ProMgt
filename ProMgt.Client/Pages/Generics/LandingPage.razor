@page "/"

<MudContainer MaxWidth="MaxWidth.Small" >
    <MudPaper Elevation="0" Outlined="true" Class="text-center rounded-xl">

        <MudItem Class="pa-8">
            <MudText Typo="Typo.h4" Color="Color.Primary">
                Welcome to ProMgt! 🎉
            </MudText>
        </MudItem>
        
        <MudDivider/>

        <MudItem Class="pa-8">
            <MudText Typo="Typo.body1">
                Hey there! This is your friendly project management app.
                Let's get organized together! ✨
            </MudText>
        </MudItem>      

        <MudStack Spacing="4" Class="pa-8">
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       Size="Size.Large"
                       Href="/signin">
                Sign In
            </MudButton>

            <MudButton Variant="Variant.Outlined"
                       Color="Color.Primary"
                       Size="Size.Large"
                       Href="/signup">
                Create New Account
            </MudButton>
        </MudStack>

    </MudPaper>
</MudContainer>

<style>
    .mud-container {
        height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .mud-paper {
        min-width: 300px;
        background: linear-gradient(to bottom right, #ffffff, #f3f8ff);
    }
</style>